<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:padding="8dp">


    <TextView
        android:id="@+id/txtHistoryDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/computer"
        app:layout_constraintEnd_toEndOf="@+id/imgHistoryCpu"
        app:layout_constraintStart_toStartOf="@+id/imgHistoryCpu"
        app:layout_constraintTop_toBottomOf="@+id/imgHistoryCpu" />

    <ImageView
        android:id="@+id/imgHistoryCpu"
        android:layout_width="123dp"
        android:layout_height="112dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/imgRock"
        app:layout_constraintEnd_toStartOf="@+id/txtVS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHistoryDate" />

    <TextView
        android:id="@+id/txtHistoryDisplayPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/player"
        app:layout_constraintEnd_toEndOf="@+id/imgHistoryPlayer"
        app:layout_constraintStart_toStartOf="@+id/imgHistoryPlayer"
        app:layout_constraintTop_toBottomOf="@+id/imgHistoryPlayer" />

    <ImageView
        android:id="@+id/imgHistoryPlayer"
        android:layout_width="123dp"
        android:layout_height="112dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/imgScissor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtVS"
        app:layout_constraintTop_toBottomOf="@+id/txtHistoryDate" />

    <TextView
        android:id="@+id/txtVS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="@string/v_s"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgHistoryPlayer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgHistoryPlayer" />

    <TextView
        android:id="@+id/txtHistoryResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtHistoryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHistoryResult" />
</androidx.constraintlayout.widget.ConstraintLayout>
